{
  "name": "figma-developer-mcp-monorepo",
  "version": "0.5.0",
  "description": "Model Context Protocol server for Figma integration - Monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "install:all": "cd back && pnpm install && cd ../front && pnpm install",
    "build:back": "cd back && pnpm build",
    "build:front": "cd front && pnpm build",
    "dev:back": "cd back && pnpm dev",
    "dev:front": "cd front && pnpm dev",
    "test:back": "cd back && pnpm test",
    "test:front": "cd front && pnpm test",
    "lint:back": "cd back && pnpm lint",
    "lint:front": "cd front && pnpm lint",
    "changeset": "changeset add",
    "version": "changeset version && git add -A",
    "beta:start": "changeset pre enter beta",
    "beta:end": "changeset pre exit",
    "beta:version": "changeset version && pnpm install --lockfile-only",
    "beta:publish": "changeset publish",
    "release": "changeset publish && git push --follow-tags"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.10.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GLips/Figma-Context-MCP.git"
  },
  "homepage": "https://www.framelink.ai",
  "keywords": [
    "figma",
    "mcp",
    "typescript",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.2"
  }
}
