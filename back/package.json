{
  "name": "figma-developer-mcp-back",
  "version": "0.5.0",
  "description": "Model Context Protocol server for Figma integration - Backend",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "figma-developer-mcp": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup --dts",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "start": "node dist/cli.js",
    "start:cli": "cross-env NODE_ENV=cli node dist/cli.js",
    "start:http": "node dist/cli.js",
    "dev": "cross-env NODE_ENV=development tsup --watch",
    "dev:cli": "cross-env NODE_ENV=development tsup --watch -- --stdio",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "inspect": "pnpx @modelcontextprotocol/inspector",
    "prepack": "pnpm build"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.10.0",
  "dependencies": {
    "@figma/rest-api-spec": "^0.33.0",
    "@google-cloud/vertexai": "^1.10.0",
    "@modelcontextprotocol/sdk": "^1.10.2",
    "@types/yargs": "^17.0.33",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "google-auth-library": "^10.3.0",
    "js-yaml": "^4.1.0",
    "recharts": "^3.1.2",
    "remeda": "^2.20.1",
    "sharp": "^0.34.3",
    "yargs": "^17.7.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.17.0",
    "@types/recharts": "^1.8.29",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.5.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.4.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
